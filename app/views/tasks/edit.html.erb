<h1>Edit your Task:</h1>

<%= form_for(@task) do |t| %>
  <div class="form-group">
    <%= t.label :title %>
    <%= t.text_field :title, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= t.label :details %>
    <%= t.text_field :details, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= t.check_box :completed%>
    <%= t.label :completed %>
  </div>

  <%= t.submit class: 'btn btn-primary' %>
<% end %>

<div class="checkbox">
  <%= link_to "Back to the list", tasks_path %>
</div>
