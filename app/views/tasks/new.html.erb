<h1>Add a new Task:</h1>

<%= form_for(@task) do |t| %>
  <div class="form-group">
    <%= t.label :title %>
    <%= t.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= t.label :details %>
    <%= t.text_field :details, class: 'form-control' %>
  </div>

  <%= t.submit class: 'btn btn-primary' %>
<% end %>

<div class="checkbox">

  <%= link_to tasks_path do %>
  <p><i class="fas fa-undo-alt"></i> Back to the menu</p>
  <% end %>

</div>


